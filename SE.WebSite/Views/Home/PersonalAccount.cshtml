@model SE.Model.ViewModels.MaterialsCollectionViewModel
@using SE.Common

@{
    ViewData["Title"] = "PersonalAccount";
}

<main class="cd-main-content">
    <section class="banner-personal">
        <div class="position-center-center">
            <div class="container">
                <h4>Личный кабинет</h4>
            </div>
        </div>
    </section>

    <section class="container-fluid content">
        <div class="row">
            <div class=" welcome col-sm-12 col-md-12 col-lg-12 ">
                <h4>Добро пожаловать, <span>Дорогой Пользователь</span></h4>
            </div>
        </div>
        <div class="row">
            <div class="wrap_dop_info col-sm-12 col-md-3 col-lg-3">
                <h5>Мои публикации</h5>
                <ul>
                    <li> <a href="~/Material/NewMaterial"> Новый материал </a> </li>
                    <li>
                        <div class="dop_info">
                            <select name="MaterialStatus" asp-items="Html.GetEnumSelectList<Enums.MaterialStatus>()" onchange="SearchMyMaterials()" class="form-control"></select>
                        </div>
                    </li>
                </ul>

            </div>
            <div class="wrap_main_info col-sm-12  col-md-9 col-lg-9">

                <div class="wrap_sort">
                    <p class="sort_text">Сортировать:</p>
                    <select name="SortType" asp-items="Html.GetEnumSelectList<Enums.SortType>()" onchange="SearchMyMaterials()" class="form-control"></select>
                </div>
                <h4 name="materilasInfo" class="margin-bottom-450" hidden>Нет материалов</h4>
                <div name="materials" class="row wrap_items">
                    @foreach (var material in Model.Materials)
                    {
                        <div class="info_item">
                            <div class="wrap_img_item">
                                <a href="/Material/MaterialDetail?id=@material.Id">
                                    @if (material.Base64Picture.Length < 10)
                                    {
                                        <img src="~/images/noimage.png" />
                                    }
                                    else
                                    {
                                        <img src="data:image/jpeg;base64,@material.Base64Picture" />
                                    }
                                </a>
                            </div>
                            <a href="/Material/MaterialDetail?id=@material.Id" class="item_text">@material.Name.ToString()</a>
                            <div class="row">
                                <div class="col-6">Рейтинг: @material.Rating</div>
                                <div class="col-6">Кол-во скачиваний: @material.DownloadsCount</div>
                            </div>
                            <div class="row" style="text-align:center">
                                <div style="width: 50%; margin: 0 auto;">
                                    @if (material.Status == Enums.MaterialStatus.Published || material.Status == Enums.MaterialStatus.OnModeration)
                                    {
                                        <a href="/Material/DeleteMaterial?id=@material.Id" class="btn btn-danger">Delete</a>
                                    }
                                    else if (material.Status == Enums.MaterialStatus.Deleted)
                                    {
                                        <a href="/Material/RestoreMaterial?id=@material.Id" class="btn btn-success disabled">Restore</a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <label hidden id="totalCount">@Model.TotalCount</label>
            </div>
        </div>
    </section>
</main>



<label hidden id="totalCount">@Model.TotalCount</label>

<script>

    function DownloadMaterial(id) {
        $.ajax({
            type: "GET",
            url: '/Material/DownloadMaterial?id=' + id,
            success: function (data) {

            }
        });
    };

    function SearchMyMaterials() {
        var sortType = $('select[name="SortType"]').val();
        var materialStatus = $('select[name="MaterialStatus"]').val();
        $.ajax({
            type: "POST",
            url: '/Home/PersonalAccount',
            data: {
                SortType: sortType,
                MaterialStatus: materialStatus
            },
            success: function (data) {
                pageNum = data.page;
                $('#totalCount').text(data.totalCount);
                if (data.totalCount === 0) {
                    $("#showMore").attr("hidden", true);
                    $('div[name="materials"]').attr("hidden", true);
                    $('h4[name="searchResult"]').removeAttr('hidden');
                }
                else {
                    $('h4[name="searchResult"]').attr("hidden", true);
                    $('div[name="materials"]').removeAttr('hidden');
                    $('div[name="materials"]').empty();
                    $.each(data.materials, function () {
                        $('div[name="materials"]').append(
                            `<div class="info_item">
                                <div class="wrap_img_item">
                                    <a href="/Material/MaterialDetail?id=`+ this.id + `">`
                            + (this.base64Picture.length <= 10 ?
                                `<img src="/images/noimage.png" />` :
                                `<img src="data:image/jpeg;base64,` + this.base64Picture + `" />`) + `
                                    </a>
                                </div>
                                <a href="/Material/MaterialDetail?id=`+ this.id + `" class="item_text">` + this.name + `</a>
                                <div class="row">
                                    <div class="col-6">Рейтинг:`+ this.rating + `</div>
                                    <div class="col-6">Кол-во скачиваний:  `+ this.downloadsCount + `</div>
                                </div>
                                <div class="row" style="text-align:center">
                                    <div style="width: 50%; margin: 0 auto;">`
                            + (this.statusString == "На модерации" ?
                                `<a href="/Material/DeleteMaterial?id=` + this.id + `" class="btn btn-danger">Delete</a>` : "")
                            + (this.statusString == "Удалено" ?
                                `<a href="/Material/RestoreMaterial?id=` + this.id + `" class="btn btn-success disabled">Restore</a>` : "") + `
                                    </div>
                                </div>
                            </div>`
                        );
                    });
                }
            }
        });
    }
</script>
