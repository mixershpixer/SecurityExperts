@{
    ViewData["Title"] = "Index";
}

<div id="content" style="margin-top:100px">
    <div class="container-fluid">
        <!-- одна строка -->
        <div class="row no-gutters text-center ">
            <div class="col-2">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a id="mainLink" class="nav-link active" data-toggle="tab" href="#materials">MATERIALS</a>
                    </li>
                    <li class="nav-item">
                        <a id="mainLink" class="nav-link" data-toggle="tab" href="#users">USERS</a>
                    </li>
                </ul>
            </div>
            <div class="col-10">
                <div class="tab-content animated animatedFadeInUp fadeInUp">
                    <div id="materials" class="container tab-pane active" style="margin-left:inherit !important">
                        <div id="materials-container">
                            @await Component.InvokeAsync("Materials")
                        </div>
                    </div>
                    <div id="users" class="container tab-pane">
                        <div id="users-container">
                            @await Component.InvokeAsync("Users")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
