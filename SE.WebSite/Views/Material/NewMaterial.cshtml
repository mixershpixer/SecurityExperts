@model SE.Model.ViewModels.MaterialViewModel
@using SE.Common

@{
    ViewData["Title"] = "View";
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewMaterial" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea type="text" asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auditory" class="control-label"></label>
                <select asp-for="Auditory" asp-items="Html.GetEnumSelectList<Enums.Auditory>()" class="form-control"></select>

                <span asp-validation-for="Auditory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Theme" class="control-label"></label>
                <select asp-for="Theme" asp-items="Html.GetEnumSelectList<Enums.Theme>()" class="form-control"></select>
                <span asp-validation-for="Theme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<Enums.Type>()" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DownloadingLink" class="control-label"></label>
                <textarea asp-for="DownloadingLink" class="form-control" ></textarea>
                <span asp-validation-for="DownloadingLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                @*<input type="file" accept="image/*" name="Picture" asp-for="Picture" class="form-control" />*@
                <div class="custom-file mt-3" style="width:17vw">
                    <input type="file" asp-for="Picture" class="custom-file-input form-control" accept="image/*" name="Picture">
                    <label class="custom-file-label" for="customFile" style="text-align: left;">Please choose photo</label>
                </div>
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceOfInformation" class="control-label"></label>
                <input asp-for="SourceOfInformation" class="form-control" />
                <span asp-validation-for="SourceOfInformation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
