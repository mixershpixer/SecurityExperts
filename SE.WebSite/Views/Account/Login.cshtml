@model SE.Model.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Войти";
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <title>@ViewData["Title"] - Знатоки безопасности</title>
    <link rel="shortcut icon" href="/images/favicon.png" type="image/png">

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/ionicons.min.css" rel="stylesheet">
    <link href="~/css/main.css" rel="stylesheet">
    <link href="~/css/p_style.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/responsive.css" rel="stylesheet">

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/modernizr.js"></script>

</head>
<body>
    <!-- Прелоадер -->
    <div class="preloader">
        <div class="preloader__image"></div>
    </div>
    <!-- Wrap -->
    <div id="wrap">
        <header>
            <div class="container-full">
                <div class="row">

                    <div class="logo"><a href="~/Home/Index"><img class="img-responsive" src="~/images/logo.png" alt=""></a></div>
                </div>
            </div>
        </header>
        <!--Контент -->

        <div id="content">

            <div class="container">
                <div class="row" style="text-align:center; display:initial">
                    <div style="margin:20px 0 30px 0;">
                        <h2>ВХОД</h2>
                    </div>
                </div>
                @*<div class="row">*@
                    <div class="row" style="text-align:center; display:initial">

                        <div>
                            @if (Model.Message != null)
                            {
                                <h5 style="text-align: center;">@Model.Message</h5>
                            }
                            <form class="form-text" asp-action="Login">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row  ">
                                    <div class="col-lg-12 ">
                                        <label>
                                            <input type="text" value="" placeholder="Email: address@mail.ru" asp-for="Email" class="form-control form-registr">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </label>
                                    </div>
                                    <div class="col-lg-12">
                                        <label>
                                            <input type="password" placeholder="Введите пароль" asp-for="Password" class="form-control form-registr">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </label>
                                    </div>
                                    <div class="col-lg-12 " style="margin: 30px auto;">
                                        <button type="submit" class="btn">Войти</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                @*</div>*@
                    <div class="row" style="text-align:center">
                        <div style="margin: 0px auto; width: 50%;">
                            <p>Еще не зарегистрированы? <a href="~/Account/Registration"> Создать аккаунт.</a></p>
                        </div>
                    </div>
                </div>
        </div>
    </div>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery-1.12.4.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/own-menu.js"></script>
    <script src="~/js/jquery.lighter.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/lazysizes.min.js"></script>
    <script src="~/js/main.js"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>